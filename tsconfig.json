{
    "compilerOptions": {
        "composite": true,
        "target": "ES2022",
        "module": "CommonJS",
        "types": ["node", "express"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["./src/**/*.ts", "src/my-db.interface.ts"],
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.d.ts"],
    "references": [
        {
            "path": "./tsconfig.spec.json"
        }
    ]
}
